{
	"compilerOptions": {
		"allowJs": true,
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"noEmit": true,
		"baseUrl": "./", // 解析非相对模块的基地址，默认是当前目录
		"paths": {
			"@": ["./src"],
			"*": [""]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/apiconfig/index.js", "src/router/index.js"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
